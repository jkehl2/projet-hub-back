#OK Return all user data related to one given user id
# ==> return 1 user object
query GetUserByID($id: ID!) {
  user(id: $id){
    id
    created_at
    name
    email
    avatar
    activated
    projectsCreated{
      id
      title
    }
    projectsFollowed{
      id
      title
    }
  }
}
#query variables
{
	"id": 1
}
