#OK update user name & email
## AUTHENTICATION REQUIRED
# ==> return updated user object OR 1 error object

mutation editUser($name: String!, $email: String!) {
  editUserInfos(name: $name, email: $email) {
    __typename
    ... on User{
      id
      name
      email
      
    }
    ... on Error{
      error{
        msg
        code
      }
    }
  }
} 
