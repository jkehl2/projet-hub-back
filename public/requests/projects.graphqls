#OK create new project
# AUTHENTICATION REQUIRED
# ==> return the created project object

mutation CreateProject(
        $title: String!,
        $description: String!,
        $expiration_date: String!,
        $location: String!,
        $lat: Float!,
        $long: Float!,
        $image: String,
        $file: String,
        $needs: [NeedInput]
) {
  insertProject(
        title: $title,
        description: $description,
        expiration_date: $expiration_date,
        location: $location,
        lat: $lat,
        long: $long,
        image: $image,
        file: $file,
        needs: $needs
  ) {
    id
    title
    description
    created_at
    isFollowed
    userIsAuthor
    needs{
      id
      title
      project{
        id
        title}
    }
    author{
      name
    }
  }
}
